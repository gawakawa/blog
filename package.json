{
  "name": "purescript-blog",
  "version": "1.0.0",
  "description": "PureScriptとHalogenで作られたブログ",
  "type": "module",
  "scripts": {
    "clean": "rm -rf output node_modules .spago *.lock .psci_modules dist",
    "build": "spago build && vite build",
    "compile": "spago build",
    "test": "spago test",
    "dev": "vite",
    "preview": "vite preview",
    "deploy": "wrangler pages deploy dist --project-name ps-blog --branch=main --commit-dirty=true"
  },
  "devDependencies": {
    "vite": "^4.5.0",
    "wrangler": "^4.6.0"
  }
}
